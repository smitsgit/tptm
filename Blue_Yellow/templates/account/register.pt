<div metal:use-macro="view.common_layout">
    <div metal:fill-slot="main_content">
        <h1>Create an account</h1>
        <form class="standard-form" action="" method="POST">
            <input name="email" required type="email" placeholder="email"><br>
            <input name="password" required type="password" placeholder="password" ><br>
            <input name="confirm_password" required type="password" placeholder="confirm password" ><br>
            <button type="submit">Register</button>
        </form>
    </div>
</div>